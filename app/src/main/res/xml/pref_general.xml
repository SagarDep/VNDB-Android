<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="Recommendations for people to contact based on your message history"
        android:title="Enable social recommandations"/>

    <EditTextPreference
        android:capitalize="words"
        android:defaultValue="John Smith"
        android:inputType="textCapWords"
        android:key="example_text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Display name"/>

    <ListPreference
        android:defaultValue="-1"
        android:entries="@array/background_pref_titles"
        android:entryValues="@array/background_pref_values"
        android:key="@string/pref_key_theme"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Theme selection"/>

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/spoiler_pref_titles"
        android:entryValues="@array/spoiler_pref_values"
        android:key="@string/pref_key_spoiler"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Default spoiler level"/>

</PreferenceScreen>
