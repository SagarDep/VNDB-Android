<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/background_pref_titles"
        android:entryValues="@array/background_pref_values"
        android:key="@string/pref_key_theme"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Theme selection"/>

    <ListPreference
        android:defaultValue="0"
        android:entries="@array/spoiler_pref_titles"
        android:entryValues="@array/spoiler_pref_values"
        android:key="@string/pref_key_spoiler"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="Default spoiler level"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_key_spoiler_completed"
        android:summary="Enable all spoilers for a VN if its status is &quot;Finished&quot;"
        android:title="Spoil me if finished"/>

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/pref_key_nsfw"
        android:summary=""
        android:title="Always show NSFW content"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_key_browser"
        android:summary="Clicking on links to external websites (like Wikipedia) opens these links inside the app (requires Chrome)"
        android:title="In-app browser"/>

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/pref_key_cover_background"
        android:summary="Show the VN cover in the background (in the VN details page)"
        android:title="Show the VN's background"/>
</PreferenceScreen>
