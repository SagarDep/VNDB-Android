<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/emptyRecommendationsBackgroundImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/vndb_logo_80_transparent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp"
        android:text="You don't have enough novels in your list so we can give you recommendations. Add more novels and come back here later!"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:textStyle="bold" />
</LinearLayout>